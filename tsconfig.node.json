{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "vite/client",
      "vite-plugin-comlink/client",
      "unplugin-vue-macros/macros-global",
      "vitest/globals",
      "@vitest/browser/providers/webdriverio"
    ],
    "noEmit": true
  },
  "include": [
    ".eslintrc.cjs",
    "webpack.config.js",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "tailwind.config.js",
    "postcss.config.js",
    "scripts/*"
  ]
}
